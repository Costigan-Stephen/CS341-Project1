<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="productBack">
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <div class="card__image_prev">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">
                                        $
                                        <%= product.price %>
                                    </h2>
                                    <p class="product__description product__overflow">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-product" method="POST">
                                        <input type="hidden" value="<%= product._id %>" name="productId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <div class="none_found_base">
                            <div class="none_found_overlay">
                                <span class="none_found">
                                    <h1>These aren't the products you're looking for</h1>
                                    <h2>Please try again later!</h2>
                                </span>
                            </div>
                        </div>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>