<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <div class="login-form">
                    <%- include('../includes/error-display.ejs', {errorMessage: errorMessage}) %>
                        <h1>Reset Password</h1>
                </div>
                <form class="login-form" action="/reset" method="POST">
                    <div class="form-control">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email">
                    </div>
                    <%- include('../includes/token.ejs') %>
                        <button class="form-myButton" type="submit">Reset Password</button>
                </form>
                <br/>
                <div class="login-form centered">
                    Return to <a href="/login">Login</a>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>