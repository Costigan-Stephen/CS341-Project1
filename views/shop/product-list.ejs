<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/productlist.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="productBack">
                <% if (prods.length > 0) { %>
                    <div class="object-area">
                        <div>
                            <% for (let product of prods) { %>
                                <a href="/products/<%= product._id %>" class="no-anchor-list">
                                    <article class="card-list product-item-list">
                                        <div class="card__image_prev-list">
                                            <img class="list-img" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                        </div>
                                        <div class="list_desc">
                                            <header class="card__header">
                                                <h1 class="product__title-list">
                                                    <%= product.title %>
                                                </h1>
                                            </header>
                                            <div class="card__content">
                                                <h2 class="product__price-list">
                                                    $
                                                    <%= product.price.toFixed(2) %>
                                                </h2>
                                                <p class="product__description-list product__overflow-list">
                                                    <%= product.description %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="card__actions-list">
                                            <% if (isLoggedIn) { %>
                                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                                    <% } %>
                                        </div>
                                    </article>
                                </a>
                                <% } %>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="none_found_base">
                            <div class="none_found_overlay">
                                <span class="none_found">
                                    <h1>These aren't the products you're looking for</h1>
                                    <h2>Please try again later!</h2>
                                </span>
                            </div>
                        </div>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>