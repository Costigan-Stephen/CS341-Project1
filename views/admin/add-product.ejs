<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/admin/add-product" method="POST">
                    <div class="form-control">
                        <h1 style="text-align: center;">Add an Item</h1>
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01">
                        <label for="image">Image</label>
                        <input type="text" name="image" id="image">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="4" style="width: 100%;"></textarea>
                    </div>
                    <br/>
                    <%- include('../includes/token.ejs') %>
                        <button type="submit" style="padding: 10px 40px; color: black; width: 100%">Add Product</button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>